---
import Header from "@/components/Header.astro";
import "@fontsource/atkinson-hyperlegible";

const { header = true } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>uploadurl</title>
    </head>
    <body class="bg-background text-normal min-h-screen">
        {header && <Header server:defer/>}
        <slot />
    </body>
</html>

<style is:global>
    html {
        font-family:
            "Atkinson Hyperlegible",
            system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            Oxygen,
            Ubuntu,
            Cantarell,
            "Open Sans",
            "Helvetica Neue",
            sans-serif;
    }

    .special-text {
        @apply bg-clip-text text-transparent bg-special-gradient;
    }

    /* Add fade-in animation */
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fadeIn 0.6s ease-out forwards;
    }
</style>
